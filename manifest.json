{
    "manifest_version": 2,
    "minimum_chrome_version": "38",
    "version": "0.0.1",
    "author": "Slacker87",
    "name": "CoreIR Uplink",
    "short_name": "CoreIR",
    "description": "Crossplatform configuration tool for CoreIR transponders",

    "offline_enabled": true,

    "default_locale": "en",

    "app": {
        "background": {
            "scripts": ["eventPage.js"],
            "persistent": false
        }
    },

    "sandbox": {
    },
         
        "permissions": [
        "https://*.github.com/",
        "https://*.githubusercontent.com/",
        "https://*.amazonaws.com/",
        "serial",
        "usb",
        "storage",
        "fileSystem",
        "fileSystem.write",
        "fileSystem.retainEntries",
        "notifications",
        "alwaysOnTopWindows",
        {"usbDevices": [
            {"vendorId": 1155, "productId": 57105}
        ]}
    ],

    "icons": {
        "128": "images/icon_128.png"
    }
}
